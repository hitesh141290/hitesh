<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="form_view_eway_configuration" model="ir.ui.view">
        <field name="name">eway.configuration.form</field>
        <field name="model">eway.configuration</field>
        <field name="arch" type="xml">
            <form string="Port Code" modifiers="{}">
                <sheet string="Eway Configuration">
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_production" type="object" class="oe_stat_button" icon="fa-check-square">
                            <field name="active_production" widget="boolean_button"  options="{&quot;terminology&quot;: {                                     &quot;string_true&quot;: &quot;Production Environment&quot;,                                     &quot;hover_true&quot;: &quot;Switch to test environment&quot;,                                     &quot;string_false&quot;: &quot;Test Environment&quot;,&quot;hover_false&quot;: &quot;Switch to production environment&quot; }}"/>
                        </button>
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options="{&quot;terminology&quot;: &quot;archive&quot;}"/>
                        </button>
                    </div>
                    <group string="Configuration Details">
                        <field name="eway_url" required="1"
                               placeholder="http://testapi.taxprogsp.co.in/ewaybillapi/dec/v1.03/"/>

                        <group>

                            <field name="asp_id" required="1"/>
                            <field name="asp_password" required="1"/>
                        </group>
                        <group>
                            <field name="gstin" required="1"/>
                            <field name="user_name" required="1"/>
                            <field name="ewb_password" required="1"/>
                        </group>

                    </group>
                    <group string="Distance API Key">
                        <field name="distance_key" required="1"/>
                    </group>
                    <group string="Eway Details">
                        <field name="access_token" readonly="1"/>
                        <field name="access_date"  readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_eway_configuration" model="ir.ui.view">
        <field name="name">eway.configuration.tree</field>
        <field name="model">eway.configuration</field>
        <field name="arch" type="xml">
            <tree string="Eway Configuration">
                <field name="eway_url" />
                <field name="active" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_eway_search">
        <field name="name">eway.configuration.search</field>
        <field name="model">eway.configuration</field>
        <field name="arch" type="xml">
            <search string="Questions Analysis">
                <field name="eway_url" />
                <field name="active" />

                <separator/>
                <filter string="Active False" domain="[('active', '=',False)]"/>

            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_eway_configuration">
        <field name="name">Eway Configuration</field>
        <field name="res_model">eway.configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <!--<field name="domain">[('active', '=', True)]</field>-->
    </record>

    <menuitem id="menu_eway_configuration" parent="gst_configuration" action="action_eway_configuration"/>
</odoo>
