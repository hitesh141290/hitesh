<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="form_view_eway_transporter" model="ir.ui.view">
        <field name="name">eway.transportation.form</field>
        <field name="model">eway.transportation</field>
        <field name="arch" type="xml">
            <form string="E-Way Bill" modifiers="{}">
                <sheet modifiers="{}">
                     <label for="name"/>
                    <h1 modifiers="{}">

                        <field name="name" placeholder="Transporter Name" class="oe_inline" required="1"/>
                    </h1>
                    <separator string="Transporter Details" modifiers="{}"/>
                    <group modifiers="{}">
                        <group col="2" modifiers="{}">
                            <field name="transportation_mode" required="1" modifiers="{'required':true}"/>
                            <field name="email_id" modifiers="{}" widget="email"/>
                        </group>
                        <group modifiers="{}">
                            <field name="transporter_date" placeholder="11/04/2018" required="1" modifiers="{'required':true}"/>
                            <field name="transporter_id" placeholder="123456" attrs="{'required': [('transportation_mode', '!=', '1')]}" modifiers="{'required':[['transportation_mode','!=','1']]}"/>
                            <field name="mobile_no" modifiers="{}"/>
                        </group>
                    </group>
                    <separator string="Address" modifiers="{}"/>
                    <group modifiers="{}">
                        <group modifiers="{}">
                            <field name="transporter_address1" placeholder="Street..." modifiers="{}"/>
                            <field name="transporter_address2" placeholder="Street2..." modifiers="{}"/>
                            <field name="state_id" required="1" can_create="true" can_write="true" modifiers="{'required':true}"/>
                        </group>
                        <group modifiers="{}">
                            <field name="city" placeholder="City" modifiers="{}"/>
                            <field name="zip" placeholder="151515" required="1" on_change="1" modifiers="{'required':true}"/>
                            <field name="country_id" required="1" can_create="true" can_write="true" modifiers="{'required':true}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter" modifiers="{}">
                    <field name="message_follower_ids" widget="mail_followers" modifiers="{}"/>
                    <field name="message_ids" widget="mail_thread" modifiers="{}" options="{'display_log_button': True}"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_eway_tree" model="ir.ui.view">
        <field name="name">eway.transportation.tree</field>
        <field name="model">eway.transportation</field>
        <field name="arch" type="xml">
            <tree string="Transportations">
                <field name="name" modifiers="{}"/>
                <field name="transporter_id" modifiers="{}"/>
                <field name="mobile_no" modifiers="{}"/>
                <field name="city" modifiers="{}"/>
                <field name="state_id" can_create="true" can_write="true" modifiers="{}"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_transporters">
        <field name="name">Transporters</field>
        <field name="res_model">eway.transportation</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="gst_ewaybill" name="GST EwayBill"/>
    <menuitem id="gst_configuration" name="Configuration" parent="gst_ewaybill"/>
    <menuitem id="menu_action_auditlog_rule_tree" parent="gst_ewaybill" action="action_transporters"/>


</odoo>